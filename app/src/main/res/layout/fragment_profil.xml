<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:id="@+id/userProfil_LAY_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/social_media_new_resu"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userProfil_IMG_message"
                android:layout_width="69dp"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:src="@drawable/email__1_"
                android:visibility="gone" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfil_IMG_symbol"
                android:layout_width="96dp"
                android:layout_height="0dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:src="@drawable/user"
                tools:civ_border_color="#FF000000"
                tools:civ_border_width="2dp" />

            <TextView
                android:id="@+id/userProfil_TXT_editSymbol"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:text="Edit"
                android:textColor="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:orientation="horizontal"></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:layout_weight="0.75"
                android:src="@drawable/man_user" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/userProfil_ETXT_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="name player"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/cream"
                android:enabled="false"
                android:layout_weight="2"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="15"
                    android:enabled="false"

                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/userProfil_IMG_saveName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:src="@drawable/button"/>

            <TextView
                android:id="@+id/userProfil_TXT_editName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Edit"
                android:textColor="@color/blue" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="1dp"


            android:background="@color/black"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:src="@drawable/city_map" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/userProfil_ETXT_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:enabled="false"
                android:hint="City:"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/cream"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="10"

                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/userProfil_IMG_saveCity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:src="@drawable/button"/>
            <TextView
                android:id="@+id/userProfil_TXT_editCity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Edit"
                android:textColor="@color/blue" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/black"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:src="@drawable/football_club" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/userProfil_ETXT_myTeam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Name Club:"
                android:layout_gravity="center"
                android:enabled="false"
                android:layout_weight="2.5"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/cream"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="10"

                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="1dp"


            android:background="@color/black"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="0.5"

                android:src="@drawable/description" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/userProfil_ETXT_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="About Me:"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/cream"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="10"

                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/userProfil_IMG_saveDescription"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:src="@drawable/button"/>

            <TextView
                android:id="@+id/userProfil_TXT_editDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Edit"
                android:textColor="@color/blue" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="1dp"


            android:background="@color/black"
            android:orientation="horizontal"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/blue_gray"
        android:layout_weight="0.5"

        android:orientation="horizontal"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>