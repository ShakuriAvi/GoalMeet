<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/chatItem_IMG_profileImage"
        android:src="@drawable/user"/>
    <TextView
        android:id="@+id/chatItem_TXT_showMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/chatItem_IMG_profileImage"
        android:layout_marginLeft="5dp"
        android:padding="8dp"
        android:text="hello"
        android:textSize="18sp"
        android:background="@drawable/background_left"/>

    <TextView
        android:id="@+id/chatItem_TXT_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatItem_TXT_showMessage"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:text="seen"
        android:textSize="10sp" />


</RelativeLayout>